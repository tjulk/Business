<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/body_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/orca_title_bar_top_background"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/login_logo_text"
            android:textColor="@color/white"
            android:textSize="22dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip" >

        <LinearLayout
            android:id="@+id/personnal_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/bg_dashboard_top_left"
            android:clickable="true" >

            <TextView
                android:id="@+id/personal_text"
                style="@style/DashboardButton"
                android:text="个人档案" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/password_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/bg_dashboard_top_right"
            android:clickable="true" >

            <TextView
                android:id="@+id/password_text"
                style="@style/DashboardButton"
                android:text="密码修改" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/person_panel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >
        <WebView
            android:id="@+id/personnal_info"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/password_panel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="30dip"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/old_password"
                android:layout_width="0dip"
                android:layout_height="42.0dip"
                android:layout_marginBottom="17.0dip"
                android:layout_marginTop="16.0dip"
                android:layout_weight="1"
                android:background="@drawable/login_inputfield_background"
                android:hint="输入密码"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="9.0dip"
                android:password="true"
                android:singleLine="true"
                android:textSize="14.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/new_password"
                android:layout_width="0dip"
                android:layout_height="42.0dip"
                android:layout_marginBottom="17.0dip"
                android:layout_marginTop="16.0dip"
                android:layout_weight="1"
                android:background="@drawable/login_inputfield_background"
                android:hint="输入新密码"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="9.0dip"
                android:password="true"
                android:singleLine="true"
                android:textSize="14.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/reinput_password"
                android:layout_width="0dip"
                android:layout_height="42.0dip"
                android:layout_marginBottom="17.0dip"
                android:layout_marginTop="16.0dip"
                android:layout_weight="1"
                android:background="@drawable/login_inputfield_background"
                android:hint="再次输入新密码"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="9.0dip"
                android:password="true"
                android:singleLine="true"
                android:textSize="14.0sp" />
        </LinearLayout>

        <Button
            android:id="@+id/password_submit"
            android:layout_width="fill_parent"
            android:layout_height="42.0dip"
            android:background="@drawable/login_button_background"
            android:gravity="center"
            android:paddingBottom="0.0dip"
            android:paddingTop="0.0dip"
            android:text="修改密码"
            android:textColor="@drawable/solid_white"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        >
        <TextView
            android:id="@+id/todo_engineer"
            android:layout_width="fill_parent"
            android:layout_height="42dip"
            android:background="@drawable/bg_subtitle"
            android:gravity="center"
            android:padding="8dip"
            android:text="祥民技术 版权所有V1.0"
            android:textColor="@color/white"
            android:textSize="18dip" />
    </LinearLayout>
</LinearLayout>