<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statisticslist_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_selector"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/statistics_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:singleLine="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/text_size_large"
        />

    <TextView
        android:id="@+id/statistics_periodcount"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:paddingTop="5.0dip"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/statistics_expiredcount"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:paddingTop="5.0dip"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/statistics_unfinished"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingTop="5.0dip"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large" />
    <TextView
        android:id="@+id/statistics_finished"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingTop="5.0dip"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large" />
    <TextView
        android:id="@+id/statistics_periodclearingmoney"
        android:layout_width="90dip"
        android:layout_height="wrap_content"
        android:paddingTop="5.0dip"
        android:singleLine="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large"/>
    <TextView
        android:id="@+id/statistics_expiredclearingmoney"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:paddingTop="5.0dip"
        android:singleLine="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large"/>

</LinearLayout>